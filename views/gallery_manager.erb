<nav class="breadcrumb is-centered is-large" aria-label="breadcrumbs">
  <ul>
    <li><a href="/upload">Upload</a></li>
    <li><a href="/edit">Edit</a></li>
    <li class="is-active"><a href="#">Gallery</a></li>
  </ul>
</nav>
<h1 class="title">Manage Gallery</h1>
<div class="columns">
  <div class="column">
    <div class="file">
      <form method='POST' action='/upload' enctype="multipart/form-data">
        <label class='file-label'>
          <span class="file-cta">
            <span class="file-icon">
              <i class="fas fa-upload"></i>
            </span>
            <span class="file-label">
              Choose Image File
            </span>
          </span>
          <input type="file" class="file-input" name='file'>
        </label>
        <input class='button' type="submit" value="Upload Image">
      </form>
    </div>
  </div>
</div>

<h1>Images Showing</h1>
<br>
<div class="columns">
  <ul>
    <% @visible_images.each_with_index do |image| %>
    <li class="gallery-box">
      <article class="media box">
        <figure class="media-left">
          <img class="image gallery-image" src="<%= image.image.url %>">
        </figure>
        <div class="media-content">
          <div class="content">
            <form action="/images/<%= image.id %>" method="post">
              <input name="_method" type="hidden" value="put" />
              <button class="button is-warning">Remove From Gallery</button>
            </form>
            <br>
            <form action="/images/<%= image.id %>" method="post">
              <input name="_method" type="hidden" value="delete" />
              <button class="button is-danger">Delete</button>
            </form>
          </div>
        </div>
      </article>
    </li>
    <% end %>
  </ul>
</div>

<h1>Images Not Showing</h1>
<br>
<div class="columns">
  <ul>
    <% @invisible_images.each_with_index do |image| %>
    <li class="gallery-box">
      <article class="media box">
        <figure class="media-left">
          <img class="image gallery-image" src="<%= image.image.url %>">
        </figure>
        <div class="media-content">
          <div class="content">
            <form action="/images/<%= image.id %>" method="post">
              <input name="_method" type="hidden" value="put" />
              <button class="button is-warning">Add To Gallery</button>
            </form>
            <br>
            <form action="/images/<%= image.id %>" method="post">
              <input name="_method" type="hidden" value="delete" />
              <button class="button is-danger">Delete</button>
            </form>
          </div>
        </div>
      </article>
    </li>
    <% end %>
  </ul>
</div>