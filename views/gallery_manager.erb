<nav class="breadcrumb is-centered is-large" aria-label="breadcrumbs">
  <ul>
    <li><a href="/upload">Upload</a></li>
    <li><a href="/edit">Edit</a></li>
    <li class="is-active"><a href="#">Gallery</a></li>
  </ul>
</nav>
<h1 class="title">Manage Gallery</h1>
<div class="columns">
  <div class="column">
    <div class="file">
      <form method='POST' action='/upload' enctype="multipart/form-data">
        <label class='file-label'>
          <span class="file-cta">
            <span class="file-icon">
              <i class="fas fa-upload"></i>
            </span>
            <span class="file-label">
              Choose Image File
            </span>
          </span>
          <input type="file" class="file-input" name='file'>
        </label>
        <input class='button' type="submit" value="Upload Image">
      </form>
    </div>
  </div>
</div>

<h1>Images Showing</h1>
<div class="columns">
    <% @visible_images.each_with_index do |image| %>
    <div class="column">
      <article class="media">
        <figure class="media-left">
          <img class="image gallery-image" src="<%= image.image.url %>">
        </figure>
        <div class="media-content">
          <div class="content">
            <p><%= image.image.file.filename %></p>
            <button class="button">Remove From Gallery</button>
            <button class="button">Delete</button>
          </div>
          </div>
        </article>
      </div>
    <% end %>
  </div>
</div>

<h1>Images Not Showing</h1>
<div class="columns">
    <% @invisible_images.each_with_index do |image| %>
    <div class="column">
      <article class="media">
        <figure class="media-left">
          <img class="image gallery-image" src="<%= image.image.url %>">
        </figure>
        <div class="media-content">
          <div class="content">
            <p><%= image.image.file.filename %></p>
            <button class="button">Add to Gallery</button>
            <button class="button">Delete</button>
          </div>
        </article>
      </div>
    <% end %>
  </div>
</div>
